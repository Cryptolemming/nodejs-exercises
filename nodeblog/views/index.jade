extends layout

block content
	posts
		each post, i in posts
				.post
					a.more(href='/posts/show/#{post._id}')
						h1.post-header=post.title
					.date
						i.fa.fa-clock-o
						p.time #{moment(post.date).format('MM.DD.YYYY')}
					img(src='/images/uploads/#{post.mainimage}')
					.post-body!=post.body, 400




